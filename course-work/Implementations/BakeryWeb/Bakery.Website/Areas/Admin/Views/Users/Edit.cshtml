@model Bakery.Website.ViewModels.UserRolesViewModel

<h2>Manage Roles for: @Model.Email</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="UserId" />

    <table class="table">
        @for (int i = 0; i < Model.Roles.Count; i++)
        {
            <tr>
                <td>@Model.Roles[i].RoleName</td>
                <td>
                    <input type="checkbox" asp-for="Roles[i].IsSelected" />
                    <input type="hidden" asp-for="Roles[i].RoleName" />
                </td>
            </tr>
        }
    </table>

    <button class="btn btn-success" type="submit">Save</button>
</form>
