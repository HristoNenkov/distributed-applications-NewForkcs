@model IEnumerable<Bakery.Data.Entities.Product>

@{
    ViewData["Title"] = "Продукти";
}

<h1>Продукти</h1>

<div class="mb-3">
    <div class="row g-2">
        <div class="col-md-4">
            <input type="text" id="product-search" class="form-control"
                   placeholder="Търси продукт..." value="@Context.Request.Query["searchString"]" />
        </div>

        <div class="col-md-3">

            <select id="sort-by" class="form-select">
                <option value="">Без сортиране</option>
                <option value="price_asc">Цена ↑ (нарастваща)</option>
                <option value="price_desc">Цена ↓ (намаляваща)</option>
                <option value="name_asc">Име A-Z</option>
                <option value="name_desc">Име Z-A</option>
            </select>
        </div>
        <div class="col-md-2">
            <input type="number" step="0.01" id="min-price"
                   class="form-control" placeholder="Мин. цена" />
        </div>

        <div class="col-md-2">
            <input type="number" step="0.01" id="max-price"
                   class="form-control" placeholder="Макс. цена" />
        </div>
        <div class="col-md-1">
            <button id="filter-btn" class="btn btn-primary w-100">OK</button>
        </div>
    </div>
</div>
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<div id="products-container">@await Html.PartialAsync("_ProductsTable",Model)</div>
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            const searchInput = document.getElementById('product-search');
            const sortSelect = document.getElementById('sort-by');
            const minPriceInput = document.getElementById('min-price');
            const maxPriceInput = document.getElementById('max-price');
            const filterBtn = document.getElementById('filter-btn');
            const container = document.getElementById('products-container');

            let timerId;

            function loadProducts() {
                if (!container) return;

                const term = searchInput ? searchInput.value : '';
                const sortBy = sortSelect ? sortSelect.value : '';
                const minPrice = minPriceInput ? minPriceInput.value : '';
                const maxPrice = maxPriceInput ? maxPriceInput.value : '';

                const params = new URLSearchParams();

                if (term) params.append('searchString', term);
                if (sortBy) params.append('sortBy', sortBy);
                if (minPrice) params.append('minPrice', minPrice);
                if (maxPrice) params.append('maxPrice', maxPrice);

                const url = '@Url.Action("Search", "Products")' + '?' + params.toString();

                fetch(url, {
                    headers: { 'X-Requested-With': 'XMLHttpRequest' }
                })
                    .then(response => response.text())
                    .then(html => {
                        container.innerHTML = html;
                    })
                    .catch(err => console.error('Search error:', err));
            }

            if (searchInput) {
                searchInput.addEventListener('input', function () {
                    clearTimeout(timerId);
                    timerId = setTimeout(loadProducts, 300);
                });
            }

            if (sortSelect) {
                sortSelect.addEventListener('change', loadProducts);
            }

            if (minPriceInput) {
                minPriceInput.addEventListener('change', loadProducts);
            }

            if (maxPriceInput) {
                maxPriceInput.addEventListener('change', loadProducts);
            }

            if (filterBtn) {
                filterBtn.addEventListener('click', function (e) {
                    e.preventDefault();
                    loadProducts();
                });
            }
        });
    </script>
}
